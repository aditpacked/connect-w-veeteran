-- // Konfigurasi Key
local REQUIRED_KEY = "v3eTerank"

-- // Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local LocalPlayer = Players.LocalPlayer

-- // GUI Utama
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Background semi transparan
local BlurFrame = Instance.new("Frame")
BlurFrame.Size = UDim2.new(1, 0, 1, 0)
BlurFrame.BackgroundColor3 = Color3.fromRGB(10, 10, 10)
BlurFrame.BackgroundTransparency = 0.25
BlurFrame.Parent = ScreenGui

-- Frame utama
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 350, 0, 200)
MainFrame.Position = UDim2.new(0.5, -175, 0.5, -100)
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Parent = BlurFrame
MainFrame.ClipsDescendants = true

-- Styling Frame
MainFrame.BackgroundTransparency = 0.1
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 30)
MainFrame.ZIndex = 2

-- UICorner untuk rounded
local corner = Instance.new("UICorner", MainFrame)
corner.CornerRadius = UDim.new(0, 16)

-- Shadow
local shadow = Instance.new("ImageLabel")
shadow.Parent = MainFrame
shadow.Size = UDim2.new(1, 30, 1, 30)
shadow.Position = UDim2.new(0, -15, 0, -15)
shadow.BackgroundTransparency = 1
shadow.Image = "rbxassetid://1316045217"
shadow.ImageColor3 = Color3.fromRGB(0, 0, 0)
shadow.ImageTransparency = 0.5
shadow.ScaleType = Enum.ScaleType.Slice
shadow.SliceCenter = Rect.new(10, 10, 118, 118)
shadow.ZIndex = 1

-- Judul
local Title = Instance.new("TextLabel")
Title.Parent = MainFrame
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.Text = "üîí Key Verification"
Title.Font = Enum.Font.GothamSemibold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(120, 180, 255) -- Neon biru
Title.ZIndex = 2

-- Input Box
local KeyBox = Instance.new("TextBox")
KeyBox.Parent = MainFrame
KeyBox.Size = UDim2.new(0.8, 0, 0, 40)
KeyBox.Position = UDim2.new(0.1, 0, 0.4, 0)
KeyBox.PlaceholderText = "Enter Key..."
KeyBox.Font = Enum.Font.Gotham
KeyBox.TextSize = 18
KeyBox.TextColor3 = Color3.fromRGB(200, 200, 200)
KeyBox.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
KeyBox.ClearTextOnFocus = false
KeyBox.ZIndex = 2

local corner2 = Instance.new("UICorner", KeyBox)
corner2.CornerRadius = UDim.new(0, 12)

-- Tombol Submit
local SubmitBtn = Instance.new("TextButton")
SubmitBtn.Parent = MainFrame
SubmitBtn.Size = UDim2.new(0.8, 0, 0, 40)
SubmitBtn.Position = UDim2.new(0.1, 0, 0.7, 0)
SubmitBtn.Text = "Unlock"
SubmitBtn.Font = Enum.Font.GothamSemibold
SubmitBtn.TextSize = 18
SubmitBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
SubmitBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
SubmitBtn.ZIndex = 2

local corner3 = Instance.new("UICorner", SubmitBtn)
corner3.CornerRadius = UDim.new(0, 12)

-- Animasi hover
SubmitBtn.MouseEnter:Connect(function()
    TweenService:Create(SubmitBtn, TweenInfo.new(0.25), {
        BackgroundColor3 = Color3.fromRGB(100, 60, 255)
    }):Play()
end)

SubmitBtn.MouseLeave:Connect(function()
    TweenService:Create(SubmitBtn, TweenInfo.new(0.25), {
        BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    }):Play()
end)

-- Fungsi verifikasi
local function verifyKey()
    if KeyBox.Text == REQUIRED_KEY then
        -- Animasi close
        TweenService:Create(MainFrame, TweenInfo.new(0.5), {
            Size = UDim2.new(0, 0, 0, 0),
            BackgroundTransparency = 1
        }):Play()
        wait(0.5)
        ScreenGui:Destroy()

        -- === Mapping GameID ke Script ===
        local placeScripts = {
            [108448055225264] = "https://raw.githubusercontent.com/aditpacked/connect-w-veeteran/refs/heads/main/LoaderTP4khirat",
            [128473079243102] = "https://raw.githubusercontent.com/aditpacked/connect-w-veeteran/refs/heads/main/LoaderTP4runika",
            [81721415693976]  = "https://raw.githubusercontent.com/aditpacked/connect-w-veeteran/refs/heads/main/LoaderTP5eribu"
        }

        local currentPlaceId = game.PlaceId
        if placeScripts[currentPlaceId] then
            local scriptUrl = placeScripts[currentPlaceId]
            local success, result = pcall(function()
                return loadstring(game:HttpGet(scriptUrl))()
            end)
            if not success then
                warn("Failed to execute script for place " .. currentPlaceId .. ": " .. result)
            end
        else
            warn("‚ö†Ô∏è Tidak ada script untuk game ini: " .. currentPlaceId)
        end
    else
        KeyBox.Text = ""
        KeyBox.PlaceholderText = "‚ùå Key salah!"
        KeyBox.PlaceholderColor3 = Color3.fromRGB(255, 80, 80)
    end
end

-- Klik tombol ‚Üí cek key
SubmitBtn.MouseButton1Click:Connect(verifyKey)
